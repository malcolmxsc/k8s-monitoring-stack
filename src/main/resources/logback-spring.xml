<configuration>
  <!-- Console JSON logs (kept, good for local dev) -->
  <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
    <includeMdcKeyName>traceId</includeMdcKeyName>
    <includeMdcKeyName>spanId</includeMdcKeyName>
      <providers>
        <timestamp/>
        <logLevel/>
        <loggerName/>
        <threadName/>
        <mdc/>
        <message/>
        <provider class="net.logstash.logback.composite.GlobalCustomFieldsJsonProvider">
          <customFields>{"service":"observability-sandbox"}</customFields>
        </provider>
      </providers>
    </encoder>
  </appender>

  <!-- File JSON logs (Promtail will tail ./logs/app.log) -->
  <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- Where the *current* log file lives -->
    <file>logs/app.log</file>
    
    

    <!-- JSON formatting -->
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
    <includeMdcKeyName>traceId</includeMdcKeyName>
    <includeMdcKeyName>spanId</includeMdcKeyName>
      <providers>
        <timestamp/>
        <logLevel/>
        <loggerName/>
        <threadName/>
        <mdc/>
        <message/>
        <provider class="net.logstash.logback.composite.GlobalCustomFieldsJsonProvider">
          <customFields>{"service":"observability-sandbox"}</customFields>
        </provider>
      </providers>
    </encoder>

    <!-- Daily rotation: logs/app-YYYY-MM-DD.log, keep 7 days -->
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
  <!-- Daily files, split into chunks when >10MB -->
  <fileNamePattern>observability/logs/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
  <maxFileSize>10MB</maxFileSize>
  <!-- Optional: cap total disk usage across all archives -->
  <totalSizeCap>1GB</totalSizeCap>
  <maxHistory>7</maxHistory>
</rollingPolicy>
  </appender>

  <!-- Root logger sends to BOTH console and file -->
  <root level="INFO">
    <appender-ref ref="JSON_CONSOLE"/>
    <appender-ref ref="JSON_FILE"/>
  </root>
</configuration>
